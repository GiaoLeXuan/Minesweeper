<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minesweeper.HardGameController">
    <VBox>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" onAction="#backToMenu" text="Close" />
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" onAction="#helpOnClicked" text="About" />
            </Menu>
        </MenuBar>
        <HBox alignment="CENTER">
            <Text fx:id="remainingMinesText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" wrappingWidth="50.0" />
            <Button fx:id="restartButton" contentDisplay="GRAPHIC_ONLY" ellipsisString="" mnemonicParsing="false" onAction="#restartButtonOnClicked" prefHeight="30.0" prefWidth="30.0" text="Button" />
            <Text fx:id="timeCounterText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="RIGHT" wrappingWidth="50.0" />
        </HBox>
        <TilePane fx:id="tilePane" prefColumns="30" prefHeight="384.0" prefRows="16" prefWidth="720.0" />
    </VBox>
</AnchorPane>
