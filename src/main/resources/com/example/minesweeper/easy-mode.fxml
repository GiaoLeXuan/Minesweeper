<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minesweeper.EasyGameController">
    <VBox>
        <MenuBar>
            <Menu mnemonicParsing="false" text="Game">
                <MenuItem mnemonicParsing="false" onAction="#helpOnClicked" text="Help" />
                <MenuItem mnemonicParsing="false" onAction="#backToMenu" text="Return" />
            </Menu>
            <Menu mnemonicParsing="false" text="Sound">
                <RadioMenuItem mnemonicParsing="false" onAction="#turnMediaOn" selected="true" text="On">
                    <toggleGroup>
                        <ToggleGroup fx:id="sound" />
                    </toggleGroup>
                </RadioMenuItem>
                <RadioMenuItem mnemonicParsing="false" onAction="#turnMediaOff" text="Off" toggleGroup="$sound" />
            </Menu>
        </MenuBar>
        <HBox alignment="CENTER">
            <Text fx:id="remainingMinesText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" wrappingWidth="50.0">
            <font>
               <Font name="System Bold" size="16.0" />
            </font></Text>
            <Button fx:id="restartButton" contentDisplay="GRAPHIC_ONLY" ellipsisString="" mnemonicParsing="false" onAction="#restartButtonOnClicked" prefHeight="30.0" prefWidth="30.0" text="Button" />
            <Text fx:id="timeCounterText" strokeType="OUTSIDE" strokeWidth="0.0" text="0" textAlignment="RIGHT" wrappingWidth="50.0">
            <font>
               <Font name="System Bold" size="16.0" />
            </font></Text>
        </HBox>
        <TilePane fx:id="tilePane" prefColumns="9" prefHeight="216.0" prefRows="9" prefWidth="216.0" />
    </VBox>
</AnchorPane>
